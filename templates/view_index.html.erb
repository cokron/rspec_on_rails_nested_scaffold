<h1><%= plural_name %></h1>

<table>
  <tr>
<% for attribute in attributes -%>
    <th><%= attribute.column.human_name %></th>
<% end -%>
  </tr>

<%% for <%= singular_name %> in @<%= plural_name %> %>
  <tr>
<% for attribute in attributes -%>
    <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td><%%= link_to 'Anzeigen', [@<%= nesting_owner %>, <%= singular_name %>] %></td>
    <td><%%= link_to 'Bearbeiten', edit_<%= nesting_owner %>_<%= singular_name %>_path(@<%= nesting_owner %>, <%= singular_name %>) %></td>
    <td><%%= link_to 'Löschen', [@<%= nesting_owner %>, <%= singular_name %>], :confirm => 'Möchten Sie den gewählten Datensatz wirklich löschen?', :method => :delete %></td>
  </tr>
<%% end %>
</table>

<br />

<%%= will_paginate @<%= plural_name %> %>

<%%= link_to '<%= singular_name %> erstellen', new_<%= nesting_owner %>_<%= singular_name %>_path(@<%= nesting_owner %>) %>
